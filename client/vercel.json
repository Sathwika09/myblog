{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",  // Path to your frontend's package.json file
        "use": "@vercel/static-build", // Vercel uses this build for static sites
        "config": {
          "distDir": "dist" // This specifies the output directory for your build
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/client/$1" // This will route all requests to the 'client' directory
      }
    ]
  }
  